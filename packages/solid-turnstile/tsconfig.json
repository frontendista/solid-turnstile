{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": [
            "turnstile-types"
        ]
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/rollup.config.js",
    ]
}